    <script>
        // Criar estrelas no fundo
        function createStars() {
            const starsContainer = document.getElementById('starsContainer');
            const starSymbols = ['â­', 'âœ¨', 'ğŸŒŸ', 'ğŸ’«'];
            
            for(let i = 0; i < 20; i++) {
                const star = document.createElement('div');
                star.className = 'star';
                star.textContent = starSymbols[Math.floor(Math.random() * starSymbols.length)];
                star.style.left = Math.random() * 100 + '%';
                star.style.top = Math.random() * 100 + '%';
                star.style.animationDelay = Math.random() * 2 + 's';
                starsContainer.appendChild(star);
            }
        }

        // Criar coraÃ§Ãµes flutuantes
        function createFloatingHearts() {
            const container = document.getElementById('floatingHearts');
            const hearts = ['ğŸ’•', 'ğŸ’–', 'ğŸ’—', 'ğŸ’˜', 'ğŸ’'];
            
            setInterval(() => {
                const heart = document.createElement('div');
                heart.className = 'floating-heart';
                heart.textContent = hearts[Math.floor(Math.random() * hearts.length)];
                heart.style.left = (Math.random() * 200 - 100) + 'px';
                heart.style.animationDelay = Math.random() * 2 + 's';
                heart.style.animationDuration = (Math.random() * 2 + 3) + 's';
                
                container.appendChild(heart);
                
                setTimeout(() => {
                    if (heart.parentNode) {
                        heart.parentNode.removeChild(heart);
                    }
                }, 4000);
            }, 1000);
        }

        // FunÃ§Ã£o de celebraÃ§Ã£o
        function celebrate() {
            const overlay = document.getElementById('celebrationOverlay');
            overlay.style.display = 'flex';
            
            // Criar fogos de artifÃ­cio
            createFireworks();
            
            // Tocar som de celebraÃ§Ã£o (visual)
            setTimeout(() => {
                for(let i = 0; i < 30; i++) {
                    setTimeout(() => createFirework(), i * 200);
                }
            }, 500);
        }

        // Criar fogos de artifÃ­cio
        function createFireworks() {
            const container = document.getElementById('fireworksContainer');
            const symbols = ['ğŸ†', 'ğŸ‡', 'âœ¨', 'ğŸ‰', 'ğŸŠ', 'ğŸ’¥', 'â­'];
            
            for(let i = 0; i < 15; i++) {
                setTimeout(() => {
                    const firework = document.createElement('div');
                    firework.className = 'firework';
                    firework.textContent = symbols[Math.floor(Math.random() * symbols.length)];
                    firework.style.left = Math.random() * 100 + '%';
                    firework.style.top = Math.random() * 100 + '%';
                    firework.style.animationDelay = Math.random() * 1 + 's';
                    
                    container.appendChild(firework);
                    
                    setTimeout(() => {
                        if (firework.parentNode) {
                            firework.parentNode.removeChild(firework);
                        }
                    }, 3000);
                }, i * 300);
            }
        }

        function createFirework() {
            const container = document.getElementById('fireworksContainer');
            const symbols = ['ğŸ†', 'ğŸ‡', 'âœ¨', 'ğŸ‰', 'ğŸŠ'];
            
            const firework = document.createElement('div');
            firework.className = 'firework';
            firework.textContent = symbols[Math.floor(Math.random() * symbols.length)];
            firework.style.left = Math.random() * 100 + '%';
            firework.style.top = Math.random() * 100 + '%';
            
            container.appendChild(firework);
            
            setTimeout(() => {
                if (firework.parentNode) {
                    firework.parentNode.removeChild(firework);
                }
            }, 2000);
        }

        // Manipular o botÃ£o "NÃ£o"
        let noClickCount = 0;
        const noMessages = [
            'ğŸ˜¢ Tem certeza?',
            'ğŸ¥º Pensa melhor...',
            'ğŸ’” Por favor...',
            'ğŸ˜­ Eu te amo!',
            'ğŸ™ SÃ³ um sim?',
            'ğŸ’• Para mim?'
        ];

        function handleNo() {
            const noButton = document.getElementById('noButton');
            noClickCount++;
            
            if (noClickCount < noMessages.length) {
                noButton.textContent = noMessages[noClickCount - 1];
                noButton.style.fontSize = Math.max(1.1 - (noClickCount * 0.1), 0.8) + 'rem';
            } else {
                noButton.textContent = 'ğŸ’” ImpossÃ­vel!';
                noButton.style.pointerEvents = 'none';
                noButton.style.opacity = '0.5';
            }
        }

        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            createStars();
            createFloatingHearts();
        });

        // Impedir que o botÃ£o "NÃ£o" seja clicado facilmente
        document.getElementById('noButton').addEventListener('mouseenter', function() {
            if (Math.random() > 0.3) { // 70% de chance de fugir
                this.style.transform = 'translate(' + (Math.random() * 200 - 100) + 'px, ' + (Math.random() * 100 - 50) + 'px)';
            }
        });
    </script>
